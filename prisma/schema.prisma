datasource db {
  provider = "sqlite"
  url      = "file:database.db"
}

generator client {
  provider = "prisma-client-js"
}

model Product {
    id Int        @id @default(autoincrement())
    author String
    title String
    category String
    price Int
    image String
    purchases Purchase[]
}

model User {
  id                Int       @id @default(autoincrement())
  login             String
  email             String
  subscriptionType  Int
  creditsNumber     Int
  purchases         Purchase[]
}

model Purchase {
  id        Int      @id @default(autoincrement())
  date      DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id])
  productId Int
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  downloadURL String @default("No URL for this product")

}

model Game {
    id    Int     @id @default(autoincrement())
    name  String
    logo  String @default("marcin")
    characterImage String
    characterImage2 String  @default("Default Image")
    description String
    description2 String @default("Default Description")
    youtubeLink String @default("robert")

    comments Comment[]
    votes Vote[]
}

model Comment {
  id    Int     @id @default(autoincrement())
  name  String
  comment String

  game Game @relation(fields: [gameId], references: [id])
  gameId Int
}

model Vote {
  id    Int     @id @default(autoincrement())

  game Game @relation(fields: [gameId], references: [id])
  gameId Int
}


